<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.simpletvbr" name="SimpleTV BR" version="1.0.0" provider-name="zoreu">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.12.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="pt_BR">Addon para assistir canais de site</summary>
        <description lang="pt_BR">Addon que gera e reproduz playlist M3U dos canais de site com categorias e imagens. Navegue por categorias ou veja todos os canais.</description>
        <language></language>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>         
    </extension>
</addon>